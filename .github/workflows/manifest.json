{
  "manifest_version": 3,
  "name": "Aquamark Chrome Extension",
  "version": "1.0",
  "permissions": [
    "identity",
    "scripting",
    "activeTab",
    "identity.email",
    "storage"
  ],
  "host_permissions": [
    "*://mail.google.com/*",
    "*://*.execute-api.us-east-2.amazonaws.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.jpg",
      "48": "icon48.jpg",
      "128": "icon128.jpg"
    }
  },
  "icons": {
    "16": "icon16.jpg",
    "48": "icon48.jpg",
    "128": "icon128.jpg"
  }
}
