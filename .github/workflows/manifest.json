{
  "manifest_version": 3,
  "name": "Aquamark Watermark Extension",
  "version": "1.0",
  "description": "Watermark PDFs directly from Gmail",
 "permissions": [
  "identity",
  "storage",
  "scripting",
  "tabs",
  "activeTab",
  "unlimitedStorage"
],
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID",
    "scopes": [
      "openid",
      "email",
      "profile"
    ]
  },
  "host_permissions": [
    "https://accounts.google.com/*",
    "https://www.googleapis.com/*",
    "https://dvzmnikrvkvgragzhrof.supabase.co/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
 "background": {
  "service_worker": "background.js",
  "type": "module"
},
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
