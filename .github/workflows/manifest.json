{
    "manifest_version": 3,
    "name": "Aquamark Extension",
    "version": "1.0",
    "description": "Aquamark Chrome Extension for Gmail watermarking",
    "permissions": [
        "identity",
        "identity.email",
        "storage",
        "activeTab",
        "scripting",
        "https://www.googleapis.com/*",
        "https://accounts.google.com/*"
    ],
    "oauth2": {
        "client_id": "291434381676-tvr93t3bir4pp1m7qaf9nv9to9m0g5l7.apps.googleusercontent.com",
        "scopes": [
            "openid",
            "email",
            "profile"
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://mail.google.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    }
}
