{
  "manifest_version": 3,
  "name": "Aquamark Extension",
  "description": "Watermark your PDFs directly from Gmail.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.jpg",
      "48": "icon48.jpg",
      "128": "icon128.jpg"
    }
  },
  "icons": {
    "16": "icon16.jpg",
    "48": "icon48.jpg",
    "128": "icon128.jpg"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting",
    "identity.email"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://dvzmnikrvkvgragzhrof.supabase.co/*"
  ]
}
